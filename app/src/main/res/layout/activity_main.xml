<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.androidhive.recyclerviewswipe.MainActivity">

    <Button
        android:id="@+id/btnAndroidHive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Androidhive"/>

    <Button
        android:id="@+id/btnList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List"/>

    <Button
        android:id="@+id/btnGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grid"/>

    <Button
        android:id="@+id/btnItemDecoration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Decoration"/>

    <Button
        android:id="@+id/btnNestleRcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nestle RecyclerView"/>

    <Button
        android:id="@+id/btnLoadMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load More"/>

    <Button
        android:id="@+id/btnGridHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grid Header"/>

</LinearLayout>
